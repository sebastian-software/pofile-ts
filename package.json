  "name": "pofile-ts",
  "description": "Parse and serialize Gettext PO files.",
  "version": "3.0.0",
  "author": {
    "name": "Sebastian Software GmbH",
    "email": "s.werner@sebastian-software.de",
    "url": "https://sebastian-software.de/"
  },
  "contributors": [
    "Ruben Vermeersch",
    "Eyal Lewinsohn",
